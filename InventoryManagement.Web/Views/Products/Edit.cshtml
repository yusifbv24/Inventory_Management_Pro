@model ProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit Product</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 shadow">
                <div class="card-header">
                    <i class="fas fa-edit me-1"></i>
                    Edit Product Information
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="InventoryCode" class="form-label"></label>
                                    <input asp-for="InventoryCode" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Vendor" class="form-label"></label>
                                    <input asp-for="Vendor" class="form-control" />
                                    <span asp-validation-for="Vendor" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Model" class="form-label"></label>
                                    <input asp-for="Model" class="form-control" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Worker" class="form-label"></label>
                                    <input asp-for="Worker" class="form-control" />
                                    <span asp-validation-for="Worker" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label"></label>
                                    <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                                        <option value="">-- Select Category --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DepartmentId" class="form-label"></label>
                                    <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-select">
                                        <option value="">-- Select Department --</option>
                                    </select>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Product Image</label>

                            <!-- Replace the current image display section -->
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div id="currentImageContainer" class="mb-3">
                                    <p class="text-muted mb-2">Current image:</p>
                                    <div class="position-relative" style="max-width: 200px;">
                                        <img src="@Model.FullImageUrl"
                                             class="img-thumbnail cursor-pointer"
                                             alt="@Model.Model"
                                             id="currentImage"
                                             onclick="showImageModal('@Model.FullImageUrl', '@Model.Model')"
                                             style="cursor: pointer;" />
                                        <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1"
                                                onclick="removeCurrentImage()" title="Remove image">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            }

                            <div id="newImageContainer">
                                <label asp-for="ImageFile" class="form-label">
                                    @(string.IsNullOrEmpty(Model.ImageUrl) ? "Upload Image" : "Replace with New Image")
                                </label>
                                <input asp-for="ImageFile" class="form-control" accept="image/*"
                                       onchange="previewNewImage(this, 'imagePreview')" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                                <img id="imagePreview" class="img-thumbnail mt-2" style="max-width: 200px; display: none;" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="IsWorking" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsWorking" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check mb-3">
                                    <input asp-for="IsNewItem" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsNewItem" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/ajaxHandler.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            // Our submission protection flag
            let isSubmitting = false;

            // Get references to elements we'll need
            const $form = $('form');
            const $submitBtn = $('#submitBtn, button[type="submit"]').first();
            const originalButtonHtml = $submitBtn.html();

            // Initialize the AjaxHandler for this form
            AjaxHandler.handleForm('form', {
                successMessage: 'Product updated successfully!',
                successRedirect: '@Url.Action("Index")',
                redirectDelay: 1500,

                onBeforeSubmit: function(form) {
                    // FIRST LINE OF DEFENSE: Check if we're already submitting
                    // This check happens immediately, before anything else
                    // Think of it as a bouncer at a club - if someone's already going in,
                    // they stop others from entering until the first person is through
                    if (isSubmitting) {
                        console.log('Product update already in progress, blocking duplicate');
                        return false; // Stop the submission attempt
                    }

                    // LOCK THE DOOR: Set the flag to prevent any other submissions
                    isSubmitting = true;
                    console.log('Product update submission started');

                    // Let the submission proceed
                    // The AjaxHandler will handle validation, button state, etc.
                    return true;
                },

                onSuccess: function(response) {
                    console.log('Product update successful:', response);

                    // Check if this became an approval request
                    // This happens when a user updates but doesn't have direct permission
                    if (response.isApprovalRequest || response.approvalRequestId) {
                        showToast(
                            response.message || 'Product update submitted for approval',
                            'info',
                            3000
                        );

                        // Redirect after showing the approval message
                        setTimeout(() => {
                            window.location.href = '@Url.Action("Index")';
                        }, 2000);

                        return false; // We're handling the redirect
                    }

                    // Normal success - direct update
                    return true; // Let AjaxHandler handle the success flow
                },

                onError: function(errorMessage, response) {
                    console.error('Product update error:', errorMessage);

                    // UNLOCK THE DOOR: Reset the flag so the user can try again
                    // This is crucial - without this, the user would be permanently locked out
                    isSubmitting = false;

                    // Restore the button to its original state
                    $submitBtn.prop('disabled', false).html(originalButtonHtml);

                    // Error message will be shown by AjaxHandler
                }
            });
        });

        // Image handling functions - these are separate from submission logic

        function removeCurrentImage() {
            $('#currentImageContainer').hide();
            $('#RemoveImage').val('true');
            $('#newImageUpload label').text('Upload New Image');
        }

        function previewNewImage(input, previewId) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    $('#' + previewId).attr('src', e.target.result).show();
                };
                reader.readAsDataURL(input.files[0]);

                // If there's a current image, hide it since we're replacing it
                if ($('#currentImageContainer').length) {
                    $('#currentImageContainer').hide();
                    $('#RemoveImage').val('true');
                }
            }
        }

        // Image modal function for viewing the full-size image
        function showImageModal(imageUrl, title) {
            $('#globalModalImage').attr('src', imageUrl);
            $('#globalImageModal .modal-title').text(title || 'Image Preview');
            $('#globalImageModal').modal('show');
        }
    </script>
}